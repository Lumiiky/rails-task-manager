<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li> <div>
    <input type="checkbox" id="<%= task.title %>" name="<%= task.title %>" <%= 'checked' if task.completed %>>
    <%= link_to task.title, task_path(task) %> --
    <%= link_to "Delete",
      task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  </div></li>
  <% end %>
</ul>
<h3><%= link_to "add a new task", new_path %></h3>
